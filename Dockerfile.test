FROM ubuntu:16.04

# We need ca-certificates since we need to pull files using https
RUN apt-get update && apt-get install \
	python3 \
	python3-apt \
	ca-certificates \
	sudo \
	-y

RUN useradd dani -m
RUN usermod -a -G sudo dani
RUN echo 'dani:test' | chpasswd
USER dani

WORKDIR /home/dani/.dotfiles
